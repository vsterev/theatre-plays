<form class="theater-form" action="/play/edit/{{play.id}}" method="POST">
  <h1>Edit Theater</h1>
  <div>
    <label for="title">Theater Title:</label>
    <input type="text" placeholder="Theater name" value="{{play.title}}" name="title">
  </div>
  <div>
    <label for="description">Theater Description:</label>
    <textarea placeholder="Description" name="description">{{play.description}}</textarea>
  </div>
  <div>
    <label for="imageUrl">Image url:</label>
    <input type="text" placeholder="Image Url" value="{{play.imageUrl}}" name="imageUrl">
  </div>
  <div class="check">
    {{#if play.isPublic}}
    <input type="checkbox" id="check-box" name="isPublic" checked>
    {{else}}
    <input type="checkbox" id="check-box" name="isPublic">
    {{/if}}
    <label for="check-box">Public</label>
  </div>
  <button class="btn" type="submit">Submit</button>
</form>